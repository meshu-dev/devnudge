---
import type { NotionPage, NotionTag } from '@/types/notion'
import BlogTag from '@/components/BlogTag.astro'
import dayjs from 'dayjs'

interface Props {
	page: NotionPage
}

const { page } = Astro.props
---

<div class="my-14">
	<a class="text-2xl font-bold" href={ `/${page.slug}` }>{ page.heading }</a>
	<div class="mt-2 mb-3">{ page.publishedAt ? dayjs(page.publishedAt).format('MMM D, YYYY') : '' }</div>
	<div class="mt-2">{ page.tags.map((tag: NotionTag) => <BlogTag tag={ tag } />) }</div>
</div>