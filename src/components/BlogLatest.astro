---
import BlogLatestItem from "@/components/BlogLatestItem.astro";
import { getLatest } from "@/utils/api";
import type { BlogItem, PaginatedBlogList } from "@/types/blog";

const blogList: PaginatedBlogList = await getLatest();
---

<div class="mt-20">
  <h2 class="mb-10">Latest blogs</h2>
  {blogList.data.map((blogItem: BlogItem) => <BlogLatestItem blog={blogItem} />)}
  <a href="/blog" class="button">View More</a>
</div>
